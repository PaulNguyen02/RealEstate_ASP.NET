<section class="w3l-cover-3">
    <div class="cover top-bottom">
        <div class="container">
            <div class="middle-section text-center">
                <div class="section-width">
                    <p>Thật tuyệt vời khi tự sở hữu riêng cho mình một căn nhà</p>
                    @if (Session["user_name"] == null)
                    {
                        <h2>Chào mừng bạn đến với AdromedaHome</h2>
                    }
                    else
                    {
                        <h2>Chào mừng @Session["user_name"] đến với AdromedaHome</h2>
                    }
                    <div class="most-searches">
                        <h4>Các tìm kiếm phổ biến</h4>                
                        <ul>
                            @if (Session["uid"] == null)
                            {
                                <li><a href="/Estate/FilterbyTypeName?page=1&type=Biệt thự">Villa</a></li>
                                <li><a href="/Estate/FilterbyTypeName?page=1&type=Căn hộ">Căn hộ</a></li>
                                <li><a href="/Estate/FilterbyTypeName?page=1&type=Nhà riêng">Nhà riêng</a></li>
                            }
                            else
                            {
                                <li><a href="/Estate/FilterbyTypeName?page=1&type=Biệt thự&uid=@Session["uid"]">Villa</a></li>
                                <li><a href="/Estate/FilterbyTypeName?page=1&type=Căn hộ&uid=@Session["uid"]">Căn hộ</a></li>
                                <li><a href="/Estate/FilterbyTypeName?page=1&type=Nhà riêng&uid=@Session["uid"]">Nhà riêng</a></li>
                            }
                        </ul>
                    </div>
                    <form action="/Estate/AdvancedSearch?page=1" class="w3l-cover-3-gd" method="post">
                        <!--GET Method tự động mang name và value của các control b lên url-->
                        <input list="browsers" type="search" name="searchbar" placeholder="Tìm tên bất động sản" required>
                        <datalist id="browsers">
                            @foreach (var items in Model.Data4)
                            {
                                <option value="@items">@items</option>
                            }
                        </datalist>
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="type" required>
                                <option value="" selected="">Loại hình bất động sản</option>
                                @foreach (var typename in Model.Data3)
                                {
                                    <option value="@typename">@typename</option>
                                }
                            </select>
                        </span>                       
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="country" required>
                                <option value="" selected="">Quốc gia</option>
                                @foreach (var location in Model.Data2)
                                {
                                    <option value="@location">@location</option>
                                }
                            </select>
                        </span>
                        <button id="search" type="submit" class="btn-primary">Tìm kiếm</button>
                    </form>
                </div>
                <section id="bottom" class="demo">
                    <a href="#bottom"><span></span>Cuộn</a>
                </section>
            </div>
        </div>
    </div>
</section>
