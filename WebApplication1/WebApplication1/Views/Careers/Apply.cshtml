@using WebApplication1.Models
@model Career
@Styles.Render("~/Content/css/careers.css")
@Styles.Render("~/Content/css/style-starter.css")
@Styles.Render("~/Content/css/apply.css")
<div class="part-left">
    <div class="container d-flex justify-content-center mt-50 mb-50">
        <div class="row">
            <div class="col-md-10">
                @foreach (var item in Model.job)
                {
                    <div class="card card-body">
                        <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">

                            <div class="media-body">
                                <h6 class="media-title font-weight-semibold">
                                    <a href="#" data-abc="true">@item.CHUCVU</a>
                                </h6>

                                <p class="mb-3">@item.MOTACV</p>

                                <ul class="list-inline list-inline-dotted mb-0">
                                    <li class="list-inline-item">Ngày đăng <a href="#" data-abc="true">@item.NGAYDANG</a></li>
                                    <li class="list-inline-item">Ngày hết hạn <a href="#" data-abc="true">@item.NGAYHETHAN</a></li>
                                </ul>
                            </div>

                            <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                                <h3 class="mb-0 font-weight-semibold">Lương: @string.Format("{0:#,##0}", item.LUONG) VND</h3>
                            </div>
                        </div>
                    </div><br />
                }
            </div>
        </div>
    </div>

</div>
<div class="part-right">
    <div class="main">
        <div class="main-w3l">
            <h1 class="logo-w3">Tin tuyển dụng</h1>
            <div class="w3layouts-main">
                <h2><span>Ứng tuyển ngay trong hôm nay</span></h2>
                <form action="/Careers/Apply" method="post" enctype="multipart/form-data">
                    <input placeholder="Họ và Tên" name="Name" type="text" required="">
                    <input name="Dob" type="date" required="">
                    <input placeholder="Địa chỉ" name="Address" type="text" required="">
                    <input placeholder="Số điện thoại" name="Phone" type="tel" required="">
                    <input placeholder="Email" name="Email" type="email" required="">
                    <input placeholder="Chức vụ" name="Position" type="text" required="">
                    <input placeholder="Kinh nghiệm" name="Experience" type="text" required="">
                    <input type="file" name="uploadFile" id="fileToUpload">
                    <input type="submit" value="Ứng tuyển" name="submit">
                </form>
            </div>
            <div class="footer-w3l">
                <p><a href="/Home/Index">Quay lại trang chủ</a></p>
            </div>
            <!-- //main -->
            <!-- password-script -->
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.Message");
                    };
                </script>
            }
            <!-- //password-script -->
        </div>
    </div>
</div>

