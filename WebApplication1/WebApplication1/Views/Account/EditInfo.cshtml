</section>
<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-avatar">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                </div>
            </div>
            <div class="col-lg-6">
                <form class="about-text go-to" action="/Account/EditInfo?uid=@Session["uid"]" method="post" >
                    <input class="dark-color" name="name" type="text" value="@Model.name">
                    <h6 class="theme-color lead">@Model.username</h6>

                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Ngày sinh: </label>
                                <input type="text" name="dob" value="@Model.dob"/>
                            </div>
                            <div class="media">
                                <label>Địa chỉ: </label>
                                <input type="text" name="address" value="@Model.address" />
                            </div>
                            <div class="media">
                                <label>Số điện thoại: </label>
                                <input id="numb" type="text" name="phone" value="@Model.phonenumber" />
                            </div>
                            <div class="media">
                                <label>E-mail: </label>
                                <input id="email" type="text" name="email" value="@Model.email" />
                            </div>
                        </div>
                    </div>
                    <input id="savechange" type="submit" value="Lưu thay đổi"/>
                    <style>
